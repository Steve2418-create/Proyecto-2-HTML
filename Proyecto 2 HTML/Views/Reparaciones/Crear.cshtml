@model Proyecto_2_HTML.Modelos.Reparacion

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@{ ViewBag.Title = "Nueva Reparación"; }

<div class="d-flex justify-content-between align-items-center mt-4">
    <h2>Registrar Nueva Reparación</h2>
    @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal card p-4 shadow-sm" style="max-width: 600px; margin: 0 auto;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Equipo:</label>
            <div>
                @Html.DropDownList("EquipoID", ViewBag.ListaEquipos as SelectList, "--- Seleccione ---", new { @class = "form-control form-select" })
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Estado:</label>
            <div>
                <select name="Estado" class="form-control form-select">
                    <option value="Pendiente">Pendiente</option>
                    <option value="Urgente">Urgente</option>
                </select>
            </div>
        </div>

        <div class="form-group mt-4 text-end">
            <input type="submit" value="Guardar Reparación" class="btn btn-primary btn-lg" />
        </div>
    </div>
}