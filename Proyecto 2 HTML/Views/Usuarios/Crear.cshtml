@model Proyecto_2_HTML.Modelos.Usuario

@{
    ViewBag.Title = "Registrar Usuario";
}

<h2 class="mt-4">Registrar Nuevo Usuario</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal card p-4 shadow-sm" style="max-width: 600px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Nombre Completo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Correo Electrónico</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "form-control", required = "required", type = "email" } })
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Teléfono</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Contraseña</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control", type = "password", required = "required" } })
            </div>
        </div>

        <div class="form-group mt-4">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar Usuario" class="btn btn-primary" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        </div>
    </div>
}