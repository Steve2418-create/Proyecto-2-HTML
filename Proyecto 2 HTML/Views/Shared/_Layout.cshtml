
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestión Reparaciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Sistema Reparaciones</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "Usuarios", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Técnicos", "Index", "Tecnicos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Equipos", "Index", "Equipos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reparaciones", "Index", "Reparaciones", null, new { @class = "nav-link text-warning" })</li>
                </ul>
                <div class="d-flex">
                    @Html.ActionLink("Cerrar Sesión", "Login", "Acceso", null, new { @class = "btn btn-outline-danger btn-sm" })
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top: 20px;">
        @RenderBody()
    </div>

    <footer class="text-center mt-5">
        <p>&copy; @DateTime.Now.Year - Mi Aplicación ASP.NET</p>
    </footer>
</body>
</html>